<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/background"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/tv_main_wether"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="sunny"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tv_main_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="19~30â„ƒ" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RadioGroup
            android:id="@+id/rg_main_dot"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:layout_marginRight="5dp"
                android:id="@+id/rb_main_1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:button="@null"
                android:background="@drawable/dot_background"/>
            <RadioButton
                android:id="@+id/rb_main_2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:button="@null"
                android:background="@drawable/dot_background"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
