<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <ImageView
            android:id="@+id/iv_class_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:id="@+id/tv_class_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_class_emun"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_dots_vertical"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/text_gz_background"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview1"
                android:gravity="center"
                android:text="周一"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview2"
                android:gravity="center"
                android:text="周二"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview3"
                android:gravity="center"
                android:text="周三"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview4"
                android:gravity="center"
                android:text="周四"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview5"
                android:gravity="center"
                android:text="周五"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview6"
                android:gravity="center"
                android:text="周六"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:background="@drawable/text_gz_background"
                android:id="@+id/tv_textview7"
                android:gravity="center"
                android:text="周日"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#cccccc"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_alignTop="@+id/rv_class"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:background="@drawable/text_gz_background"
                        android:text="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:background="@drawable/text_gz_background"
                        android:text="2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:background="@drawable/text_gz_background"
                        android:text="3"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:background="@drawable/text_gz_background"
                        android:text="4"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <TextView
                        android:background="@drawable/text_gz_background"
                        android:text="5"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    >
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </ScrollView>
</LinearLayout>