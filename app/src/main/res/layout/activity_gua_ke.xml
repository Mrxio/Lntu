<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.net.ntech.lntu.activity.GuaKeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_tishi"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_cool"/>
        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="8dp"
            android:text="毕竟是学霸，没有挂科"/>
        <ExpandableListView
            android:background="@drawable/background_normal"
            android:id="@+id/elv_guakeinfo"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ExpandableListView>
    </LinearLayout>
    <cn.net.ntech.lntu.view.ProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pv_gua_progress"
        android:layout_centerInParent="true"/>
</RelativeLayout>

